{
  // Enable loading .env files in Python terminals
  "python.terminal.useEnvFile": true,
  
  // Python settings
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.terminal.activateEnvironment": true,
  
  // File associations
  "files.associations": {
    "*.env": "properties",
    "*.env.*": "properties"
  },
  
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  
  // Python linting
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.rulers": [88, 120]
  },
  
  // Exclude patterns
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  
  // Search exclude
  "search.exclude": {
    "**/venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true
  }
}
