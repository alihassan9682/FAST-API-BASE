# Project Configuration
PROJECT_NAME=ATB Backend
PROJECT_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://atb_user:atb_password@localhost:5432/atb_db
POSTGRES_USER=atb_user
POSTGRES_PASSWORD=atb_password
POSTGRES_DB=atb_db
POSTGRES_PORT=5432
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security
SECRET_KEY=your-unique-secret-key-must-be-at-least-32-characters-long-REQUIRED
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Celery (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth_service:8000
PRODUCT_SERVICE_URL=http://product_service:8001

# Auth Service Specific
AUTH_SERVICE_PORT=8000

# Product Service Specific
PRODUCT_SERVICE_PORT=8001

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
